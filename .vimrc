nnoremap ,C :-1read ~/.vim/templates/.skeleton.vim.c<CR>4j4la
command! MakeTags !ctags -R .

set wildmenu
set path+=**
set nocompatible
set autoindent
set expandtab
set shiftround
set shiftwidth=4
set smartcase
set hlsearch
set linebreak
set laststatus=2
set sidescrolloff=5
syntax enable
set ruler
set cursorline
set number
set relativenumber
set visualbell
set title
set dir=~/.cache/vim
set noswapfile
colorscheme wombat256mod
set showcmd
